FROM ubuntu:18.04
Ç ·Ø®·™• ≠•‚ Ì´•¨•≠‚Æ¢.
# –î–æ–±–∞–≤–ª—è–µ–º –≤—Å–µ —Ñ–∞–π–ª—ã  –∏–∑ —Ç–µ–∫—É—â–µ–π –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏–∏ –≤ —Å–æ–∑–¥–∞–≤–∞–µ–º—ã–π –æ–±—Ä–∞–∑
COPY . print/
# –ü–µ—Ä–µ—Ö–æ–¥–∏–º –≤ —Å–æ–∑–¥–∞–Ω–Ω—ã–π –∫–∞—Ç–∞–ª–æ–≥
WORKDIR print
# –í—ã–ø–æ–ª–Ω—è–µ–º —Å–±–æ—Ä–∫—É –Ω–∞—à–µ–≥–æ –ø—Ä–æ–µ–∫—Ç–∞
RUN cmake -H. -B_build -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=_install
RUN cmake --build _build
RUN cmake --build _build --target install
# –ó–∞–¥–∞–µ–º –ø–µ—Ä–µ–º–µ–Ω–Ω—É—é LOG_PATH
ENV LOG_PATH /home/logs/log.txt
# –£–∫–∞–∑—ã–≤–∞–µ–º –≤ –∫–∞–∫–æ–π –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏–∏ –±—É–¥—É—Ç —Ö—Ä–∞–Ω–∏—Ç—å—Å—è —Ñ–∞–π–ª—ã, –∫–æ—Ç–æ—Ä—ã–µ –æ—Å—Ç–∞–Ω—É—Ç—Å—è –ø–æ—Å–ª–µ —Ä–∞–±–æ—Ç—ã —Å –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–æ–º
VOLUME /home/logs

WORKDIR _install/bin
# –í –Ω–∞—â–µ–º —Å–ª—É—á–∞–µ –∫–æ–º–∞–Ω–¥–∞ ENTRYPOINT –æ–ø—Ä–µ–µ–¥–ª—è–µ—Ç —Ç–æ—á–∫—É –≤—Ö–æ–¥–∞ –≤ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏–µ
ENTRYPOINT ./demo
